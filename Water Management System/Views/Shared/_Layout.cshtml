<body>


    <!-- Side bar-->

    <div class="container-fluid">
        <div class="row flex-nowrap">
            
                <div class="col-auto col-md-3 col-xl-auto px-sm-2 px-0" style="background-color:darkblue">
                    <div class="d-flex flex-column align-items-center align-items-sm-start px-3 pt-2 text-white min-vh-100">
                    @if (StaticClass.type == "C")
                    {
                        <!--Menues for GA-->
                        <a href="/" class="d-flex align-items-center pb-3 mb-md-0 me-md-auto text-white text-decoration-none">
                            <span class="fs-5 d-none d-sm-inline">Water Management System (GA)</span>
                        </a>
                        <ul class="nav nav-pills flex-column mb-sm-auto mb-0 align-items-center align-items-sm-start" id="menu">
                          
                            <li class="nav-item">
                            
                                    <a class="nav-link align-middle px-0" asp-controller="CompanyManagment" asp-action="Index" style="color:white">Home</a>
                               
                            </li>
                            <li class="nav-item">
                           
                                    <a  class="nav-link px-0 align-middle" asp-controller="CompanyManagment" asp-action="historicalw" style="color:white">Historical Water</a>
                             
                           
                                    <a class="nav-link px-0 align-middle" asp-controller="CompanyManagment" asp-action="historicM" style="color:white">Actuator/Sensor for Crop</a>
                              
                                
                                    <a   class="nav-link px-0 align-middle" asp-controller="CompanyManagment" asp-action="addType" style="color:white">Add Actuator Type</a>
                                
                                
                                    <a  class="nav-link px-0 align-middle" asp-controller="CompanyManagment" asp-action="Sensor" style="color:white">Add Sensor</a>
                              
                               
                                    <a class="nav-link px-0 align-middle" asp-controller="CompanyManagment" asp-action="Actuator" style="color:white">Add Actuators</a>
                                
                               
                                    <a  class="nav-link px-0 align-middle" asp-controller="CompanyManagment" asp-action="Crop" style="color:white">Add Crop</a>
                              
                             
                                    <a  class="nav-link px-0 align-middle" asp-controller="CompanyManagment" asp-action="water" style="color:white">Water Management</a>
                             


                            </li>
                        
              
                          
                        </ul>
                        <hr>
                       
                    }
                    else if (StaticClass.type == "W")
                    {
                        <!--Menues for GSI-->
                        <a href="/" class="d-flex align-items-center pb-3 mb-md-0 me-md-auto text-white text-decoration-none">
                            <span class="fs-5 d-none d-sm-inline">Water Management System (GSI)</span>
                        </a>
                        <ul class="nav nav-pills flex-column mb-sm-auto mb-0 align-items-center align-items-sm-start" id="menu">
                            <li class="nav-item">
                              
                                    <a class="nav-link align-middle px-0" asp-controller="WaterManagment" asp-action="Index" style="color:white">Home</a>
                               
                            </li>
                            <li class="nav-item">
                           
                                    <a class="nav-link px-0 align-middle" asp-controller="WaterManagment" asp-action="UserManager" style="color:white">Company Managment</a>
                              
                                
                                    <a class="nav-link px-0 align-middle" asp-controller="WaterManagment" asp-action="Statictics" style="color:white">Statictics</a>
                             
                              
                                

                            </li>



                        </ul>
                        <hr>
                      


                    
                    }
                </div>
                    
                </div>
            <!--top menu-->
            <div class="col py-3">
                <div class="col" style="background-color:whitesmoke">
                    <div class="d-flex align-items-center">
                        <br /><br /><br /><br /><br /><br />
                        <div class="col">
                            <!--Company Name-->
                            <h2>@StaticClass.CompanyName</h2>

                        </div>
                        <div class="col d-flex justify-content-end">
                            @if (StaticClass.CurrentUser.Trim() == "")
                            {<!--Create Company and Login Menues-->
                                <span>
                                    <a asp-controller="GoogleLogin" asp-action="signup">
                                        <img src="~/images/create.png" height="40" width="40" />
                                        Create a Company
                                    </a>
                                    <a asp-controller="GoogleLogin" asp-action="Index">
                                        <img src="~/images/user.jpg" height="40" width="40" />
                                        Login
                                    </a>

                                </span>
                            }
                            else

                            {


                                <a>
                                    <img src="@StaticClass.image" height="40" width="40" style="border-radius: 50%;" />
                                    &nbsp;&nbsp;
                                </a>



                                <div class="dropdown show">
                                    <a class="btn btn-light dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        <!--Display current user-->
                                        @StaticClass.CurrentUser
                                    </a>

                                    <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                                        <!--Logout menu-->
                                        <a class="dropdown-item" asp-controller="GoogleLogin" asp-action="SignOutFromGoogleLogin" title="Logout">Logout</a>

                                    </div>
                                </div>



                            }




                        </div>
                        <br /><br /><br /><br /><br /><br />
                    </div>

                </div>
                <br />
                @RenderBody()
            </div>
        </div>
    </div>



