@model List<waterrequest>

@*

//This Viewer is used to show GSI Index Page
*@
@{
}
<h3>COMPANIES</h3>
<div class="row">
    <div class="col-6">
<table class="table">
    <thead class="thead-dark">
        <tr>
           @* Table Headers*@
            <th scope="col">#</th>
            <th scope="col">Company</th>
            <th scope="col">Water Allocated Amount</th>

        </tr>
    </thead>
    <tbody>
        @*Show company Details in a table*@
        @foreach (var obj in @ViewBag.comany)
        {
            <tr>
                <th scope="row">@obj.id</th>
                <td>@obj.name</td>
                <td>@obj.water</td>
             

            </tr>
        }

    </tbody>
</table>
</div>
</div>
<br />
<br />
